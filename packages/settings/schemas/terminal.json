                },
                {
                    "id": "family",
                    "default": "'JetBrains Mono Variable', monospace",
                    "description": "Controls the font family in the terminal."
                }
            ]
        },
        {
            "id": "xterm",
            "label": "Xterm.js",
            "settings": [
                {
                    "id": "renderer",
                    "default": "webgl",
                    "options": [
                        "webgl",
                        "canvas",
                        "dom"
                    ],
                    "description": "Controls the renderer used by the xterm.js backend."
                }
            ]
        }
    ]
}