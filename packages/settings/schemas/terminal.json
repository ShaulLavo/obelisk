{
    "id": "terminal",
    "label": "Terminal",
    "settings": [
        {
            "id": "backend",
            "default": "xterm",
            "options": [
                "xterm",
                "ghostty"
            ],
            "description": "Controls the terminal backend implementation."
        }
    ],
    "children": [
        {
            "id": "font",
            "label": "Font",
            "settings": [
                {
                    "id": "size",
                    "default": 14,
